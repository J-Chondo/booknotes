
<%- include("partials/header") -%>
<P><%= homecontent %></P>
<h2 class="text-center">Books I've Read</h2>
<hr>
<% console.log(posts) %>

<div class="container">

   

    <% posts.forEach( (post) => { %>
        <img class="img" src ="<%= post.cover %>" alt="<%= post.title %>">
        <h2><%= post.title %></h2>
        <small><%= post.date %></small>
        <br>
        <small>  <%= post.recommendation%></small>
        <h4 class="">Read My Notes</h4>
        <p>
             <%= post.content.substring(0, 1000) + "....."%>
             <a href="/posts/<%= post.title %>">Read More</a>
        
        </p> 
        
        <% }); %>
       


  
</div>

